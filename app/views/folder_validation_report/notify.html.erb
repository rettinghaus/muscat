<h3> Generic Errors </h3>

<%@unknown_tags.each do |key, value|%>
  <%="#{key}: #{value[:count]} items, first 10: #{value[:items]}"%><br>
<%end%>

<h3>Not updated foreign tags (need to re-save record)</h3>

<%@foreign_tag_errors.each do |ferror|%>
  <%=ferror%><br>
<%end%>

<h3>Failed validations</h3>

<%@validations.each do |id, errors|%>
<b>Validation Result for: <a href="<%=RISM::MUSCAT_URL%>admin/sources/<%=id%>"><%=id%></a></b>
  <table>
  <% errors.each do |tag, subtags| %>
    <% subtags.each do |subtag, messages|  %>
      <% messages.each do |message|  %>
      <tr>
        <td><strong><%= tag %></strong></td>
        <td><%= subtag %></td>
        <td><i><%= message %></i></td>
      </tr>
      <% end %>
    <% end %>
  <% end %>
  </table>
<% end %>

