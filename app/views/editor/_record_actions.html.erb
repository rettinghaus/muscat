<div class="panel tab_panel" style="display: none;" name="Holding_Records">
	<h3><%=I18n.t(:record_actions)%></h3>
	<div class="tag_content_collapsable">
		<table class="tag_grid" cellpadding="0" cellspacing="0">
			<tr><th width="25%"></th><th width="25%"></th><th width="25%"></th><th width="25%"></th></tr>
		
			<%= render "editor/record_actions_wf_stage_selector" %>
			<%= render "editor/record_actions_user_selector" %>

			<% # Audit is implemented only for works %>
			<% if @item.is_a? Work %>
				<%= render "editor/record_actions_wf_audit_work" %>
			<% end %>

			<% if @item.is_a?(Publication) && can?(:edit, Work) %>
				<%= render "editor/record_actions_work_catalogue_status" %>
			<% end %>


		</table>
	</div>
</div>
